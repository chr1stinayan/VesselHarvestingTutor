<PlusConfiguration version="2.3">

  <DataCollection StartupDelaySec="1.0" >
    <DeviceSet 
      Name="Vessel Harvesting Ascension"
      Description="EM sensors: 1 Retractor, 2 Trigger, 3 Cutter 4 Vessel." 
    />

    <Device
      Id="TrackerDevice" 
      Type="Ascension3DG" 
      AcquisitionRate="50" 
      LocalTimeOffsetSec="0.0" 
      FilterAcWideNotch="1"
      FilterAlpha="1"
      FilterDcAdaptive="1"
      ToolReferenceFrame="Tracker">
      <DataSources>
        <DataSource Type="Tool" Id="Retractor" BufferSize="500" PortName="0" />
        <DataSource Type="Tool" Id="Trigger" BufferSize="500" PortName="1" />
        <DataSource Type="Tool" Id="Cutter" BufferSize="500" PortName="2" />
		<DataSource Type="Tool" Id="Vessel" BufferSize="500" PortName="3" />
      </DataSources>
      <OutputChannels>
        <OutputChannel Id="TrackerStream" >
          <DataSource Id="Retractor"/>
          <DataSource Id="Trigger"/>
          <DataSource Id="Cutter"/>
		  <DataSource Id="Vessel"/>
        </OutputChannel>
      </OutputChannels>
    </Device>

    <Device
      Id="WebcamDevice" 
      Type="MmfVideo" 
      FrameSize="640 480"
      VideoFormat="YUY2"
      CaptureDeviceId="0" >
      <DataSources>
        <DataSource Type="Video" Id="Video" PortUsImageOrientation="MF" ImageType="BRIGHTNESS" />
      </DataSources>      
      <OutputChannels>
        <OutputChannel Id="WebcamStream" VideoDataSourceId="Video" />
      </OutputChannels>
    </Device>
    
    <Device 
      Id="WebcamCaptureDevice"
      Type="VirtualCapture"
      BaseFilename="WebcamRecording.mhd"
      EnableCapturingOnStart="FALSE"
      RequestedFrameRate="15">
      <InputChannels>
        <InputChannel Id="WebcamStream" />
      </InputChannels>
    </Device>

  </DataCollection>

  <PlusOpenIGTLinkServer
    MaxNumberOfIgtlMessagesToSend="1"
    MaxTimeSpentWithProcessingMs="50"
    ListeningPort="18944"
    SendValidTransformsOnly="true"
    OutputChannelId="TrackerStream" >
    <DefaultClientInfo>
      <MessageTypes>
        <Message Type="TRANSFORM" />
      </MessageTypes>
      <TransformNames>
	    <Transform Name="TriggerToCutter" />
		<Transform Name="CutterToRetractor" />
		<Transform Name="VesselToRetractor" />
      </TransformNames>
    </DefaultClientInfo>
  </PlusOpenIGTLinkServer>
  
  <PlusOpenIGTLinkServer
    MaxNumberOfIgtlMessagesToSend="1"
    MaxTimeSpentWithProcessingMs="50"
    ListeningPort="18945"
    SendValidTransformsOnly="true"
    OutputChannelId="WebcamStream">
    <DefaultClientInfo>
      <MessageTypes>
        <Message Type="IMAGE" />
      </MessageTypes>
      <ImageNames>
        <Image Name="Webcam" EmbeddedTransformToFrame="Webcam" />
      </ImageNames>
    </DefaultClientInfo>
  </PlusOpenIGTLinkServer>

</PlusConfiguration>